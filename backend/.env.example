# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_ENV=development
DEBUG=true
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-url.com
FRONTEND_URL=http://localhost:3000  # Use https://your-production-url.com in production

# Agent MVP - AI Task Coach
GOOGLE_API_KEY=your-gemini-api-key
OPIK_API_KEY=your-opik-api-key
OPIK_PROJECT_NAME=raimon-agent-mvp

# Google Calendar OAuth
GOOGLE_CLIENT_ID=your-google-client-id
